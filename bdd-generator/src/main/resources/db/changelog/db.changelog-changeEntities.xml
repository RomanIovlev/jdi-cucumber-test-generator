<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="" id="new_suit.status_field">
        <addColumn tableName="SUIT">
            <column name="STATUS" type="varchar(255)"/>
            <column name="UPDATEDATE" type="TIMESTAMP WITH TIME ZONE"/>
        </addColumn>
    </changeSet>

    <changeSet author="" id="new_stepSuggestion.date_field">
        <addColumn tableName="STEPSUGGESTION">
            <column name="LASTUSEDDATE" type="TIMESTAMP WITH TIME ZONE"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>